@model IEnumerable<SalesOrderApp.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Orders</h1>

<p>
    <a asp-action="ImportFromExcel" class="btn btn-primary">Import from Excel</a>
    <a asp-action="ExportToExcel" class="btn btn-secondary">Export to Excel</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Date</th>
            <th>Customer Name</th>
            <th>Net Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.OrderId)</td>
                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                <td>@(item.Customer != null ? item.Customer.Name : "No Customer")</td>
                <td>@Html.DisplayFor(modelItem => item.NetAmount)</td>
            </tr>
        }
    </tbody>
</table>
